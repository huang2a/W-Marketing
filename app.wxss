/**app.wxss**/
@import 'style/weui.wxss';
page {    
  background-color: #e9ecf3;
  font-size: 28rpx;  
}  
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
/* 页面盒子 */
.list-group{
  padding: 20rpx 30rpx 20rpx;
  background-color: #fff;
  margin: 20rpx 0 0 0;
}
.list-group::before{
  width: 100%;
  display: block;
  height: 1px;
  background: #dedede;
}
.list-group-margin{
  padding: 30rpx 30rpx 30rpx;
  background-color: #fff;
  margin: 30rpx 30rpx 0 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.20);
}
.bg-bai{
  background: #fff;
}
.margin10{
  margin: 10rpx;
}
.padding10{
  padding: 10rpx;
}
.box-show{
  box-shadow: 0 3rpx 3rpx #000;
}
.border-radius{
  border-radius: 3rpx;
}


/* 按钮样式 */
.btn{
  display: inline-block;
  padding: 12rpx 24rpx;
  margin-bottom: 0;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 2;
  text-align: center;
  white-space: nowrap;
  vertical-align: middle;
  -ms-touch-action: manipulation;
  touch-action: manipulation;
  cursor: pointer;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  background-image: none;
  border: 1px solid transparent;
  border-radius: 10rpx;
}
.btn-default {
    color: #333;
    background-color: #fff;
    border-color: #ccc;
}
.btn-primary {
    color: #fff;
    background-color: #f55d54;
    border-color: #f55d54;
}
.btn-success {
    color: #fff;
    background-color: #5cb85c;
    border-color: #4cae4c;
}
.btn-warning {
    color: #fff;
    background-color: #f0ad4e;
    border-color: #eea236;
}
.btn.btn-sm {
    padding: 10rpx 20rpx;
    font-size: 24rpx;
    line-height: 1.5;
    border-radius: 6rpx;
}
.btn.btn-block {
    display: block;
}
button[type="primary"] {
color:#FFFFFF;
background-color:#f55d54;
}
.button-hover[type="primary"] {
    color:rgba(255, 255, 255, 0.6);
    background-color:#d93636;
}


/* 会员中心图标 */
.user-center-icon{
    position: fixed;
    bottom: 20rpx;
    right: 20rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 100rpx;
    background: #f55d54;
    border:#f55d54 solid 1px;
    color: #fff;
    text-align: center;
}
.user-center-icon .user-icon{
    margin-top:10rpx;
    padding-top: 10rpx;
    width: 40rpx;
    height: 40rpx;
    margin: 0 auto;
}
.user-center-icon .user-title{
    font-size: 24rpx;
}